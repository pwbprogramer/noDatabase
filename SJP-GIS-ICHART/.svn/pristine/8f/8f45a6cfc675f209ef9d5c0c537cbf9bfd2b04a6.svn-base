/**
 * 验证码倒计时
 */
function countDown(timeCountDown,id){
   if(timeCountDown!=0){
	   timeCountDown--;
	   $("#"+id+"").text("("+timeCountDown+"S)秒");
       $("#"+id+"").attr("disabled",true);
	   setTimeout(function() {
		   countDown(timeCountDown,id) }
       ,1000)
   }else{
	   $("#"+id+"").attr("disabled",false);
       $("#"+id+"").text("重新发送");
   }
};

